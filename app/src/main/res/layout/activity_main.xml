<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="409dp"
        android:layout_height="100dp"



        android:layout_marginTop="36dp"
        android:background="@color/fondo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="223dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="NOMBRE"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="10dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="text"
            android:text="|"

            android:visibility="visible" />

    </FrameLayout>

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="405dp"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
        app:layout_constraintVertical_bias="0.318"
        tools:layout_editor_absoluteX="4dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="5dp" />

        <!-- FrameLayout contenedor para el botón y el TextView -->
        <FrameLayout
            android:layout_width="411dp"
            android:layout_height="123dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/forma_boton">

            <!-- Botón -->
            <Button
                android:id="@+id/camarero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="left|center"
                android:text="CAMARERO"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <!-- TextView con la flecha (>) que se mueve libremente dentro del FrameLayout -->
            <TextView
                android:id="@+id/flechaCamarero"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:text=">"
                android:textColor="@color/black"
                android:textSize="50dp" />

        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="5dp" />

        <!-- FrameLayout contenedor para el siguiente botón y el TextView -->
        <FrameLayout
            android:layout_width="414dp"
            android:layout_height="128dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/forma_boton">

            <!-- Botón -->
            <Button
                android:id="@+id/cocina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="left|center"
                android:text="COCINA"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <!-- TextView con la flecha (>) que se mueve libremente dentro del FrameLayout -->
            <TextView
                android:id="@+id/flechaCocina"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:text=">"
                android:textColor="@color/black"
                android:textSize="50dp" />

        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="5dp" />

        <!-- FrameLayout contenedor para el siguiente botón y el TextView -->
        <FrameLayout
            android:layout_width="413dp"
            android:layout_height="122dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/forma_boton">

            <!-- Botón -->
            <Button
                android:id="@+id/barra"
                android:layout_width="422dp"
                android:layout_height="107dp"
                android:background="@android:color/transparent"
                android:gravity="left|center"
                android:text="BARRA/COBRO"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <!-- TextView con la flecha (>) que se mueve libremente dentro del FrameLayout -->
            <TextView
                android:id="@+id/flechaBarra"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:text=">"
                android:textColor="@color/black"
                android:textSize="50dp" />

        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="5dp" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="412dp"
        android:layout_height="66dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/forma_boton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-1dp">

        <Button
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EXIT"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="30dp" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>