<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="426dp"
        android:layout_height="75dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="180dp"
            android:layout_height="69dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="NÂº Comensales:"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="65dp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="text"
            android:text="" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="440dp"
        android:layout_height="399dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="13dp">
        </FrameLayout>
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="151dp">
        </FrameLayout>
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="287dp">
        </FrameLayout>
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="138dp">
        </FrameLayout>
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="138dp">
        </FrameLayout>
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="287dp"
            android:layout_marginTop="138dp">
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="454dp"
        android:layout_height="100dp"
        android:layout_marginTop="700dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="2dp"
            android:background="@color/Back">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/btnflecha" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/Edit">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btnlapiz" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/Send">

            <ImageView
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btntick" />
        </FrameLayout>

        />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>