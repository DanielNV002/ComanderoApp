<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="426dp"
        android:layout_height="75dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewNComensales"
            android:layout_width="196dp"
            android:layout_height="69dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="Nº Comensales:"
            android:textSize="23dp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="65dp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="text"
            android:text="" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="440dp"
        android:layout_height="399dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="13dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ic_beer" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="115dp"
                android:text="BEBIDAS" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="151dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ic_entrantes" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="115dp"
                android:text="ENTRANTES" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="287dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                app:srcCompat="@drawable/ic_1plato" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="115dp"
                android:text="1º PLATO" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="138dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ic_2plato" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="115dp"
                android:text="2º PLATO" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="138dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                app:srcCompat="@drawable/ic_postre" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="115dp"
                android:text="POSTRES" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border"
            android:layout_marginLeft="287dp"
            android:layout_marginTop="138dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                app:srcCompat="@drawable/ic_child" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="115dp"
                android:text="MENU INFANTIL" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="210dp"
            android:layout_height="123dp"
            android:background="@drawable/border"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="276dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ic_vino" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="100dp"
                android:text="VINOS" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="210dp"
            android:layout_height="123dp"
            android:background="@drawable/border"
            android:layout_marginLeft="221dp"
            android:layout_marginTop="276dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ic_menu" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                android:text="MENU DEL DIA" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="454dp"
        android:layout_height="100dp"
        android:layout_marginTop="700dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="2dp"
            android:background="@color/Back">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/btnflecha" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/Edit">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btnlapiz" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/Send">

            <ImageView
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btntick" />
        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/textViewAtendidoPor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="164dp"
        android:text="Atendido por: "
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAtendidoPorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="164dp"
        android:text=" "
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNMesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="136dp"
        android:text="Nº Mesa: "
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNMesaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="136dp"
        android:text=" "
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>