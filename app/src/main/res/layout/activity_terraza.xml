<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MesasActivity">

    <!-- FrameLayout que contiene el Button -->

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="406dp"
        android:layout_height="98dp"
        android:layout_marginTop="56dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Button dentro del FrameLayout -->
        <!-- Centrado dentro del FrameLayout -->

        <Button
            android:id="@+id/terrazaButton"
            android:layout_width="412dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:background="@drawable/forma_boton"
            android:gravity="right|center"
            android:text="TERRAZA"
            android:textColor="@android:color/black"
            android:textSize="35dp"
            android:onClick="onTerrazaButtonClick" />

        <TextView
            android:id="@+id/flecha"
            android:layout_width="117dp"
            android:layout_height="94dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="&lt;"
            android:textColor="@color/black"
            android:textSize="50dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/mesasTerraza"
        android:layout_width="415dp"
        android:layout_height="417dp"
        android:layout_marginTop="32dp"
        android:background="@color/fondo"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/mterraza10"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/terraza" />

        <TextView
            android:id="@+id/terraza10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="110dp"
            android:text="10"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/mterraza11"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/terraza" />

        <TextView
            android:id="@+id/terraza11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="110dp"
            android:text="11"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/mterraza12"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/terraza" />

        <TextView
            android:id="@+id/terraza12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="320dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="12" />


        <ImageView
            android:id="@+id/mterraza13"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/terraza" />

        <TextView
            android:id="@+id/terraza13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="70dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="13" />

        <ImageView
            android:id="@+id/mterraza14"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/terraza" />

        <TextView
            android:id="@+id/terraza14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="200dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="14" />

        <ImageView
            android:id="@+id/mterraza15"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/terraza" />

        <TextView
            android:id="@+id/terraza15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="230dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="15"/>

        <ImageView
            android:id="@+id/mterraza16"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/terraza" />

        <TextView
            android:id="@+id/terraza16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="70dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="16" />

        <ImageView
            android:id="@+id/mterraza17"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/terraza" />

        <TextView
            android:id="@+id/terraza17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="200dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="17" />

        <ImageView
            android:id="@+id/mterraza18"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/terraza" />

        <TextView
            android:id="@+id/terraza18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="350dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="18"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/base"
        android:layout_width="412dp"
        android:layout_height="66dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/forma_boton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mesasTerraza"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-1dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/atras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BACK"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="30dp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>