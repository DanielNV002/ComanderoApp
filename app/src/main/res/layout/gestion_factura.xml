        android:background="@drawable/back"
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/TextViewPrecioUnitario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
